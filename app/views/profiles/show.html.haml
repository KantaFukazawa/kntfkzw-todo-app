.container 
  .profilepage-items
    .profiles-user-img
      = image_tag 'default-avatar.png'
    .profilepage-info
      .profilepage-user-name
        .profilepage-user-display
          = current_user.display_name
        .profilepage-user-toedit
          = link_to 'Edit', edit_profile_path
      .profilepage-user-introduction
        888888888888888888888888888888888
    - current_user.tasks.each do |task|
      .card-item
        %img.eyecatch{:src => "airbnbexample.jpg"}/
        %h3.card-item-ttl
          = task.title 
        %p.card-item-txt 
          = task.description
        .card-item-img
          = image_tag 'default-avatar.png', class: 'card-img'
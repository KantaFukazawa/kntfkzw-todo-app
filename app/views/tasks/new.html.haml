.container
  %h2.page-ttl New Card
  %ul
    - @task.errors.full_messages.each do |message|
      %li
        = message
  =form_with(model: @task, url: tasks_path, method: 'post', local: true) do |f|
    %div 
      =f.label :title, 'Name', class: 'form-name'
    %div
      =f.text_field :title, class: 'text'
    %div 
      =f.label :content, 'Description', class: 'form-name'
    %div
      =f.text_area :description, class: 'text new-board-txt'

    = f.submit '保存', class: 'btn-primary'
